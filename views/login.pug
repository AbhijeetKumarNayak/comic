extends base

block content
  .my-login-page
    section.h-100
      .container.h-100
        .row.justify-content-md-center.h-100
          .card-wrapper
            //- .brand
              //- img(src="img/logo.jpg")
            .card.fat
              .card-body
                h4.card-title Login
                form.form.form--login
                  .form-group
                    label(for="email") E-Mail Address
                    input#email.form-control(type="email" name="email" value="" required="" autofocus="")
                    .invalid-feedback
                      | Email is invalid
                  .form-group
                    label(for="password")
                      | Password
                      a.float-right(href="/reset")
                        | Forgot Password?
                    input#password.form-control(type="password" name="password" required="" data-eye="")
                    .invalid-feedback
                      | Password is required
                  .form-group.m-0
                    button.btn.btn-primary.btn-block(type="submit")
                      | Login

